    <LinearLayout
        android:id="@+id/header_linearlayout_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- A CardView that contains a TextView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_breakfast"
            android:layout_width="352dp"
            android:layout_height="168dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/gold_1"
            app:cardCornerRadius="1dp">

            <LinearLayout android:id="@+id/breakfast_recipe_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/breakfast_title"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Breakfast"
                    android:textSize="20sp" />

                <LinearLayout android:id="@+id/breakfast_nutrition_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/breakfast_dish_name"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="20sp"
                        android:text="breakfast_dish_name" />

                    <TextView
                        android:id="@+id/breakfast_Calories"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Calories: "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/breakfast_Protein"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Protein: "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/breakfast_Fat"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Fat: "
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/breakfast_Carbohydrates"
                        android:layout_width="192dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Carbohydrates: "
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_lunch"
            android:layout_width="352dp"
            android:layout_height="168dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/gold_1"
